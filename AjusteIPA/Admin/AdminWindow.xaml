<Window x:Class="AjusteIPA.Admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AjusteIPA.Admin"
        mc:Ignorable="d"
        Title="" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblTitle" Content="Administración del Sistema" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" Margin="0,0,0,0" FontSize="22" Grid.Column="1"  />
        <local:AdminUserControl HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"   Margin="1,1,1,1"   Grid.Column="1"  Grid.Row="2" />
        <Label x:Name="lblTitle_Copy" Content="Editar la información del usuario" HorizontalContentAlignment="Left" VerticalContentAlignment="Stretch" Margin="0,0,0,0" FontSize="14" Grid.Column="1" Grid.Row="1"   />
    </Grid>
</Window>
